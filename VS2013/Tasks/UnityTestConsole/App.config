<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
        <section name="unity" type="Microsoft.Practices.Unity.Configuration.UnityConfigurationSection, Microsoft.Practices.Unity.Configuration"/>
    </configSections>
    
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>

    <unity xmlns="http://schemas.microsoft.com/practices/2010/unity">
        <assembly name="Tasks.Infrastructure"></assembly>
        <namespace name="Tasks.Infrastructure.Tasks"></namespace>
        <container>
            <register type="Tasks.DataAccess.IEntityRepository[[Tasks.DomainModel.Task, Tasks.DomainModel]]" mapTo="Tasks.DataAccess.EntityRepository[[Tasks.DomainModel.Task, Tasks.DomainModel]]" />
            <register type="ITasksService" name="TasksService" mapTo="TasksService" />
        </container>
    </unity>
</configuration>